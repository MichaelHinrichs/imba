{
    "include": [
        "**/*.imba",
        "**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "node_modules/**/*.imba",
        "dist/**/*"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowUnreachableCode": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": false,
        "esModuleInterop": true,
        "suppressExcessPropertyErrors": false,
        "suppressImplicitAnyIndexErrors": false,
        "declaration": false,
        "strict": false,
        "resolveJsonModule": true,
        "noResolve": false,
        "module": "esnext",
        "target": "esnext",
        "newLine": "lf",
        "baseUrl": ".",
        "libz": [
            "esnext",
            "dom",
            "dom.iterable",
            "imba"
        ],
        "moduleResolution": "node",
        "paths": {
            "ui/*": [
                "./views/shared/*",
                "./views/controls/*"
            ]
        }
    }
}